#!/bin/sh

if [ $DEP_SCENARIO = "nostn" ]; then
  sed -i '/NodeInterconnectCIDR/d' /home/vagrant/gopath/src/github.com/contiv/vpp/k8s/contiv-vpp/manifest.yaml
  sed -i -e '/NodeInterconnectDHCP: False/c\      NodeInterconnectDHCP: True' /home/vagrant/gopath/src/github.com/contiv/vpp/k8s/contiv-vpp/manifest.yaml
  master_gw_config='\
    NodeConfig:\
    - NodeName: \"k8s-master\"\
      MainVppInterface:\
        InterfaceName: \"GigabitEthernet0/8/0\"\
      Gateway: \"10.20.0.100\"'

  worker_gw_config=''
for i in `seq 1 $NUM_K8S_NODES`; do
worker_gw_config=$worker_gw_config'\
    - NodeName: \"k8s-worker'$i'\"\
      MainVppInterface:\
        InterfaceName: \"GigabitEthernet0/8/0\"\
      Gateway: \"10.20.0.100\"'
done

  sed -i "/logs.conf/i \
""${master_gw_config}""\
""${worker_gw_config}""\
" /home/vagrant/gopath/src/github.com/contiv/vpp/k8s/contiv-vpp/manifest.yaml

else
  curl -s https://raw.githubusercontent.com/contiv/vpp/master/k8s/stn-install.sh > /tmp/contiv-stn.sh
  chmod +x /tmp/contiv-stn.sh
  sudo /tmp/contiv-stn.sh

  master_gw_config='\
      NodeConfig:\
    - NodeName: \"k8s-master\"\
      StealInterface: \"enp0s8\"'

  worker_gw_config=''
for i in `seq 1 $NUM_K8S_NODES`; do
worker_gw_config=$worker_gw_config'\
    - NodeName: \"k8s-master\"\
      StealInterface: \"enp0s8\"'
done

  sed -i "/logs.conf/i \
""${master_gw_config}""\
""${worker_gw_config}""\
" /home/vagrant/gopath/src/github.com/contiv/vpp/k8s/contiv-vpp/values.yaml
fi
